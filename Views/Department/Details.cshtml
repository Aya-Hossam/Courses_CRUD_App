@model Department


<div class="row" style="text-align: center; align-items: center;">
    <div class="col-md-8 mx-auto rounded border p-3" style="align-items: center;">
        <h2 class="text-center mb-5">Department Details</h2>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Department ID</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["DepId"]"/>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Manager</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["DepManager"]"/>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Department Name</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["DepName"]"/>
                </div>
            </div>
            
    </div>
</div>