@model List<Department>
@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center mb-5">List of Departments</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Department" asp-action="Create">Add New Department</a>
    </div>
    <div class="col">

    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Department ID</th>
            <th>Department Name</th>
            <th>Manager</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var dep in Model)
        {
            <tr>
                <td>@dep.DepId</td>
                <td>@dep.DepName</td>
                <td>@dep.DepManager</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Department" asp-action="Edit"
                        asp-route-id="@dep.DepId">Edit</a>
                    <a class="btn btn-primary btn-sm" asp-controller="Department" asp-action="Details"
                        asp-route-id="@dep.DepId">Details</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Department" asp-action="Delete"
                        asp-route-id="@dep.DepId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>