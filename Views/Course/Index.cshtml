@model List<Course>
@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center mb-5">List of Courses</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Course" asp-action="Create">Add New Course</a>
    </div>
    <div class="col">

    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Minimum Degree</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var crs in Model)
        {
            <tr>
                <td>@crs.CourseId</td>
                <td>@crs.CourseName</td>
                <td>@crs.minDegree</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Course" asp-action="Edit"
                        asp-route-id="@crs.CourseId">Edit</a>
                    <a class="btn btn-primary btn-sm" asp-controller="Course" asp-action="Details"
                        asp-route-id="@crs.CourseId">Details</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Course" asp-action="Delete"
                        asp-route-id="@crs.CourseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>