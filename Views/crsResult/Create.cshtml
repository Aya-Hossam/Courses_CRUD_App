@model crsResult


@{
    var courses = ViewBag.Crs as IEnumerable<Course> ?? new List<Course>();
    var crsOptions = new SelectList(courses, "CourseId", "CourseName");

    var trainees = ViewBag.Trainee as IEnumerable<Trainee> ?? new List<Trainee>();
    var trainOptions = new SelectList(trainees, "Id", "Name");
}


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Result</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Result Degree</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ResDegree" />
                    <span asp-validation-for="ResDegree" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Trainee</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="TraineeId" asp-items="trainOptions" required></select>
                    <span asp-validation-for="TraineeId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Course</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="CrsId" asp-items="crsOptions" required></select>
                    <span asp-validation-for="CrsId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="crsResult" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>